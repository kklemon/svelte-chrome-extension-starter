{
  "name": "svelte-chrome-extension-starter",
  "version": "0.1.0",
  "description": "A project template for a Svelte-based Chrome extension with out-of-the-box support for Tailwind CSS and Flowbite.",
  "repository": {
    "type": "git",
    "url": "https://github.com/kklemon/svelte-chrome-extension-starter.git"
  },
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint ."
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.26",
    "@eslint/js": "^9.17.0",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@tsconfig/svelte": "5.0.4",
    "@types/chrome": "0.0.287",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "flowbite": "^2.5.2",
    "flowbite-svelte": "^0.47.4",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "svelte": "5.16.0",
    "svelte-check": "4.1.1",
    "tailwindcss": "^3.4.17",
    "tslib": "2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}